<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white_bg">
    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/menu_option_height"
        android:background="@color/app_theme_yellow"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_back"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/back_btn"
            android:padding="8dp"
            android:elevation="4dp"
            android:shadowColor="#cecece"
            android:layout_gravity="center|center_vertical"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center|center_vertical"
            android:layout_marginLeft="5dp"
            android:textColor="@color/white"
            android:text="Add your Delivery Address"
            android:textSize="16sp"
            android:elevation="4dp"
            android:shadowColor="#cecece"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_top"
        android:layout_marginBottom="@dimen/menu_option_height">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_large"
                android:layout_marginLeft="@dimen/padding_normal"

                android:background="@drawable/edittext_background_bottom">
                <EditText
                    android:id="@+id/et_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="First Name*"
                    android:singleLine="true"
                    android:textSize="@dimen/medium_text_size"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:background="@color/transparent"
                    android:padding="@dimen/padding_normal"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_normal"
                android:layout_marginTop="@dimen/padding_normal"
                android:background="@drawable/edittext_background_bottom">
                <EditText
                    android:id="@+id/et_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Last Name*"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/medium_text_size"
                    android:textColorHint="@color/black"
                    android:background="@color/transparent"
                    android:padding="@dimen/padding_normal"/>
            </LinearLayout>
            <!--<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_normal"
                android:background="@drawable/edittext_background_bottom">
                <EditText
                    android:id="@+id/et_mob_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Mobile Number*"
                    android:inputType="phone"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:background="@color/transparent"
                    android:padding="@dimen/padding_normal"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_normal"
                android:background="@drawable/edittext_background_bottom">
                <EditText
                    android:id="@+id/et_pincode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Pin Code*"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:background="@color/transparent"
                    android:padding="@dimen/padding_normal"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/padding_small"
                    android:layout_marginLeft="@dimen/padding_normal"
                    android:layout_marginTop="@dimen/padding_normal"
                    android:layout_marginBottom="@dimen/padding_normal"
                    android:background="@drawable/edittext_background_bottom">
                    <EditText
                        android:id="@+id/et_city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="City*"
                        android:inputType="number"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:background="@color/transparent"
                        android:padding="@dimen/padding_normal"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/padding_normal"
                    android:layout_marginLeft="@dimen/padding_small"
                    android:layout_marginTop="@dimen/padding_normal"
                    android:layout_marginBottom="@dimen/padding_normal"
                    android:background="@drawable/edittext_background_bottom">
                    <EditText
                        android:id="@+id/et_state"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="State*"
                        android:inputType="number"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:background="@color/transparent"
                        android:padding="@dimen/padding_normal"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_normal"
                android:background="@drawable/edittext_background_bottom">
                <EditText
                    android:id="@+id/et_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Area*"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:background="@color/transparent"
                    android:padding="@dimen/padding_normal"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_normal"
                android:background="@drawable/edittext_background_bottom">
                <EditText
                    android:id="@+id/et_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Address*"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:background="@color/transparent"
                    android:padding="@dimen/padding_normal"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_normal"
                android:background="@drawable/edittext_background_bottom">
                <EditText
                    android:id="@+id/et_landmark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Landmark(optional)"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:background="@color/transparent"
                    android:padding="@dimen/padding_normal"/>
            </LinearLayout>-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_normal"
                android:background="@drawable/edittext_background_bottom">
                <TextView
                    android:id="@+id/txt_ship_addr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Shipping Address*"
                    android:singleLine="false"
                    android:clickable="true"
                    android:textSize="@dimen/medium_text_size"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:padding="@dimen/padding_normal"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Is shipping and billing address same?"
                android:textColor="@color/black"
                android:textSize="@dimen/medium_text_size"
                android:padding="@dimen/padding_normal"
                android:layout_marginTop="@dimen/padding_normal"
                android:layout_marginLeft="@dimen/padding_normal"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_normal"
                android:padding="5dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/ll_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_vertical">
                    <ImageView
                        android:id="@+id/img_yes"
                        android:layout_width="@dimen/padding_large"
                        android:layout_height="@dimen/padding_large"
                        android:layout_gravity="center|center_vertical"
                        android:src="@drawable/normal"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yes"
                        android:paddingLeft="@dimen/padding_normal"
                        android:textSize="@dimen/medium_text_size"
                        android:layout_gravity="center|center_vertical"
                        android:textColor="@color/black"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_large"
                    android:layout_gravity="center|center_vertical">
                    <ImageView
                        android:id="@+id/img_no"
                        android:layout_width="@dimen/padding_large"
                        android:layout_height="@dimen/padding_large"
                        android:layout_marginLeft="@dimen/padding_normal"
                        android:layout_gravity="center|center_vertical"
                        android:src="@drawable/active"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No"
                        android:paddingLeft="@dimen/padding_normal"
                        android:textSize="@dimen/medium_text_size"
                        android:layout_gravity="center|center_vertical"
                        android:textColor="@color/black"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_normal"
                android:background="@drawable/edittext_background_bottom">
                <TextView
                    android:id="@+id/txt_bill_addr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Billing Address*"
                    android:clickable="true"
                    android:textSize="@dimen/medium_text_size"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:padding="@dimen/padding_normal"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_normal"
                android:background="@drawable/edittext_background_bottom">
                <EditText
                    android:id="@+id/et_alt_ph_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Alternate Phone Number(optional)"
                    android:textSize="@dimen/medium_text_size"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:background="@color/transparent"
                    android:padding="@dimen/padding_normal"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/btn_continue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/app_theme_blue"
        android:text="CONTINUE"
        android:textColor="@color/white"/>
</RelativeLayout>
