<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@color/white"
        android:layout_marginBottom="50dp">
        <RelativeLayout
            android:id="@+id/rel_top_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/img_product"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/feature_product_width"
                        android:layout_marginTop="@dimen/padding_large"
                        android:layout_marginBottom="@dimen/padding_large"
                        android:layout_marginLeft="@dimen/padding_extream_large"
                        android:layout_marginRight="@dimen/padding_extra_large"
                        android:visibility="visible"/>
                    <ProgressBar
                        android:id="@+id/progress"
                        android:visibility="visible"
                        android:layout_height="@dimen/feature_product_width"
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/padding_large"
                        android:layout_marginBottom="@dimen/padding_large"
                        android:layout_marginLeft="@dimen/padding_extream_large"
                        android:layout_marginRight="@dimen/padding_extra_large"
                        android:padding="@dimen/checkout_invisible_view_width"/>
                </RelativeLayout>
                <TextView
                    android:id="@+id/txt_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Apothic Red Blend"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_size_option_menu"
                    android:gravity="center|center_vertical"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="@dimen/padding_large"
                    android:layout_gravity="center_horizontal"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:weightSum="3"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.8">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_margin="5dp"
                            android:visibility="visible">
                            <TextView
                                android:id="@+id/txt_real_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="R24.00"
                                android:textSize="@dimen/txt_size_option_menu"
                                android:textColor="@color/red"/>
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/margin_10">
                                <TextView
                                    android:id="@+id/txt_old_price"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="R500.00"
                                    android:textColor="#686868"
                                    android:textSize="@dimen/txt_size_option_menu"/>
                                <LinearLayout
                                    android:id="@+id/lin_cross"
                                    android:layout_width="60dp"
                                    android:layout_height="2dp"
                                    android:background="@color/grey"
                                    android:orientation="horizontal"
                                    android:layout_centerVertical="true"></LinearLayout>
                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/grey"/>
                    <RelativeLayout
                        android:id="@+id/rel_qnt"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.2"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/txt_qnt"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="750ml Bottle"
                            android:textColor="@color/black"
                            android:gravity="center"/>
                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:src="@drawable/down_arrow"
                            android:layout_centerInParent="true"
                            android:layout_marginRight="@dimen/margin_10"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey"/>
                <RelativeLayout
                    android:id="@+id/rel_add_to_shoping_list"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/grey_light">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_subheading"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center|center_vertical"
                            android:textColor="@color/app_theme_blue"
                            android:text="Add to Shopping List" />
                    </LinearLayout>
                </RelativeLayout>
                <TextView
                    android:id="@+id/txt_description"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/padding_normal"
                    android:gravity="left|top"
                    android:textColor="@color/black"
                    android:text="Lorem ipsum dolor sit amet, consectetuer adipiscing elit. Aenean commodo lig"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/rel_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/grey_light"
        android:layout_alignParentBottom="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="100"
            android:visibility="visible"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="50">
                <TextView
                    android:id="@+id/btn_minus1"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="15"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="-"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:visibility="invisible"
                    android:background="@drawable/edittext_rectangle_black_border"/>
                <!-- <TextView
                     android:id="@+id/btn_minus"
                     android:layout_width="0dp"
                     android:layout_height="35dp"
                     android:layout_weight="10"
                     android:layout_gravity="center_vertical"
                     android:gravity="center"
                     android:text="-"
                     android:textSize="20sp"
                     android:layout_marginRight="10dp"
                     android:textColor="@color/black"
                     android:background="@drawable/minus"/>-->
                <Button
                    android:id="@+id/img_minus"
                    android:layout_width="@dimen/plus_btn_product_details_height_width"
                    android:layout_height="match_parent"
                    android:background="@drawable/minus"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"/>
                <TextView
                    android:id="@+id/txt_count_cart_add"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:gravity="center|center_vertical"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/padding_extra_large"
                    android:layout_marginLeft="@dimen/padding_large"
                    android:layout_marginRight="@dimen/padding_large"

                    android:textColor="@color/black"
                    android:singleLine="true"
                    android:text="1"/>
                <!--<TextView
                    android:id="@+id/btn_plus"
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_height="35dp"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="+"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:background="@drawable/edittext_rectangle_black_border"/>-->
                <Button
                    android:id="@+id/img_plus"
                    android:layout_width="@dimen/plus_btn_product_details_height_width"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/plus"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_height="35dp"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="+"
                    android:visibility="invisible"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:background="@drawable/edittext_rectangle_black_border"/>
            </LinearLayout>
            <Button
                android:id="@+id/btn_add_to_cart"
                android:layout_width="0dp"
                android:layout_weight="47"
                android:layout_height="match_parent"
                android:gravity="center|center_vertical"
                android:text="ADD TO CART"
                android:layout_margin="5dp"
                android:textColor="@color/white"
                android:textStyle="normal"
                android:layout_marginLeft="@dimen/margin_10"
                android:background="@color/app_theme_blue"/>

        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/img_cross"
        android:layout_width="@dimen/spc_tag_width"
        android:layout_height="@dimen/spc_tag_width"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/padding_normal"
        android:src="@drawable/icon_cancel"/>
    <ImageView
        android:id="@+id/img_special"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="@dimen/padding_normal"
        android:src="@drawable/spcl_tag"/>
