<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white_bg">
    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/hearder_height"
        android:layout_marginTop="5dp">
        <ImageView
            android:id="@+id/img_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/padding_normal"
            android:src="@drawable/black_back"/>
        <TextView
            android:id="@+id/txt_header"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Sign Up Now"
            android:gravity="center|center_vertical"
            android:textColor="@color/black"
            android:textSize="@dimen/large_text_size"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/txt_nb"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="All fields are compulsory"
        android:layout_below="@+id/rl_top"
        android:gravity="center|center_vertical"
        android:textColor="@color/black"
        android:layout_marginLeft="@dimen/padding_normal"
        android:textSize="@dimen/small_text_size"
        android:layout_centerInParent="true"/>
    <ScrollView
        android:id="@+id/scrlvw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_nb"
        android:padding="5dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/padding_normal">

            <EditText
                android:id="@+id/et_first_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="First Name"
                android:gravity="left|center_vertical"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:layout_marginTop="@dimen/padding_normal"
                android:paddingLeft="@dimen/padding_small"
                android:singleLine="true"
                android:layout_marginBottom="@dimen/padding_normal"
                android:textSize="@dimen/signin_small_text_size"
                android:background="@null"/>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/grey"/>
            <EditText
                android:id="@+id/et_last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Surname"
                android:textColor="@color/black"
                android:paddingLeft="@dimen/padding_small"
                android:singleLine="true"
                android:textColorHint="@color/black"
                android:layout_marginTop="@dimen/padding_extra_large"
                android:layout_marginBottom="@dimen/padding_normal"
                android:textSize="@dimen/signin_small_text_size"
                android:background="@null"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="+"
                    android:layout_marginTop="@dimen/padding_extra_large"
                    android:layout_marginBottom="@dimen/padding_normal"
                    android:gravity="center|center_vertical"
                    android:textSize="@dimen/signin_small_text_size"
                    android:textColor="@color/black"
                    />
                <EditText
                    android:id="@+id/txt_pin_code"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/padding_extra_large"
                    android:layout_marginBottom="@dimen/padding_normal"
                    android:gravity="left|center_vertical"
                    android:textSize="@dimen/signin_small_text_size"
                    android:maxLength="3"
                    android:ellipsize="end"
                    android:inputType="numberSigned"
                    android:textColorHint="@color/black"
                    android:paddingLeft="@dimen/padding_small"
                    android:background="@null"
                    android:textColor="@color/black"
                    android:text="27"/>

            <EditText
                android:id="@+id/et_mobile_number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Mobile Number"
                android:textColor="@color/black"
                android:paddingLeft="@dimen/padding_small"
                android:singleLine="true"
                android:inputType="number"
                android:maxLength="10"
                android:gravity="left|center_vertical"
                android:ellipsize="end"
                android:textColorHint="@color/black"
                android:layout_marginTop="@dimen/padding_extra_large"
                android:layout_marginBottom="@dimen/padding_normal"
                android:textSize="@dimen/signin_small_text_size"
                android:background="@null"/>
            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/grey"/>
            <TextView
                android:id="@+id/et_b_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Date of Birth"
                android:editable="false"
                android:textColor="@color/black"
                android:paddingLeft="@dimen/padding_small"
                android:singleLine="true"
                android:textColorHint="@color/black"
                android:layout_marginTop="@dimen/padding_extra_large"
                android:layout_marginBottom="@dimen/padding_normal"
                android:textSize="@dimen/signin_small_text_size"
                android:background="@null"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"/>
            <EditText
                android:id="@+id/et_mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email Address"
                android:textColor="@color/black"
                android:paddingLeft="@dimen/padding_small"
                android:singleLine="true"
                android:inputType="textEmailAddress"
                android:textColorHint="@color/black"
                android:layout_marginTop="@dimen/padding_extra_large"
                android:layout_marginBottom="@dimen/padding_normal"
                android:textSize="@dimen/signin_small_text_size"
                android:background="@null"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"/>

            <TextView
                android:id="@+id/txt_billing_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Billing Address"
                android:inputType="text"
                android:typeface="normal"
                android:layout_marginLeft="@dimen/padding_small"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:layout_marginTop="@dimen/padding_extra_large"
                android:layout_marginBottom="@dimen/padding_normal"
                android:textSize="@dimen/signin_small_text_size"
                android:background="@null"/>
            <View
                android:id="@+id/view_billing_address"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"/>
            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:inputType="textPassword"
                android:typeface="normal"
                android:layout_marginLeft="@dimen/padding_small"
                android:textColor="@color/black"
                android:singleLine="true"
                android:textColorHint="@color/black"
                android:layout_marginTop="@dimen/padding_extra_large"
                android:layout_marginBottom="@dimen/padding_normal"
                android:textSize="@dimen/signin_small_text_size"
                android:background="@null"/>
            <View
                android:id="@+id/view_pass"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"/>
            <EditText
                android:id="@+id/et_conf_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:typeface="normal"
                android:layout_marginLeft="@dimen/padding_small"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:layout_marginTop="@dimen/padding_extra_large"
                android:layout_marginBottom="@dimen/padding_normal"
                android:textSize="@dimen/signin_small_text_size"
                android:background="@null"/>
            <View
                android:id="@+id/view_conf_pass"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"/>

            <Button
                android:id="@+id/btn_sign_up"
                android:layout_width="match_parent"
                android:layout_height="@dimen/hearder_height"
                android:background="@drawable/btn_background_signup"
                android:text="SIGN UP"
                android:textColor="@color/white"
                android:paddingLeft="@dimen/padding_small"
                android:singleLine="true"
                android:layout_marginTop="@dimen/menu_option_height"
                android:layout_marginLeft="@dimen/padding_extra_large"
                android:layout_marginRight="@dimen/padding_extra_large"/>
            <TextView
                android:id="@+id/txt_terms_condition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding_normal"
                android:layout_marginTop="@dimen/menu_option_height"
                android:layout_gravity="center"
                android:gravity="center|center_vertical"
                android:textColor="@color/black"
                android:text="By clicking on Sign Up above you agree to our Terms of Service and Privacy Policy." />
            <!--<LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txt_terms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/app_theme_blue"
                    android:clickable="true"
                    android:paddingLeft="@dimen/padding_normal"
                    android:layout_marginTop="@dimen/padding_normal"
                    android:text="Terms of Service" />
                <TextView
                    android:id="@+id/txt_and"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_normal"
                    android:text=" and "
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/txt_privacy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/app_theme_blue"
                    android:clickable="true"
                    android:layout_marginTop="@dimen/padding_normal"
                    android:text="Privacy Policy" />
            </LinearLayout>-->
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
