<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <RelativeLayout
        android:id="@+id/rel_parent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/my_shopping_list_bottle_height"
        android:layout_marginBottom="@dimen/margin_10">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="100"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="35"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    >

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/img_product"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/details_productbig"
                            android:padding="@dimen/margin_10"
                            android:background="@drawable/edittext_rectangle_black_border"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="10dp"
                            android:layout_centerInParent="true"/>
                        <ProgressBar
                            android:id="@+id/progress"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="@dimen/padding_large"/>
                    </RelativeLayout>
                    <ImageView
                        android:id="@+id/img_special"
                        android:layout_width="@dimen/spc_tag_width"
                        android:layout_height="@dimen/spc_tag_width"
                        android:src="@drawable/spcl_tag"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />
                    <ImageView
                        android:id="@+id/img_no_stock"
                        android:layout_width="@dimen/spc_tag_width"
                        android:layout_height="@dimen/spc_tag_width"
                        android:src="@drawable/nostock"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="65"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="5dp"
                android:orientation="vertical"
                android:padding="1dp"
                android:weightSum="100"
                >

                <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="25"
                    android:text="Apothic Red Blend"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/medium_text_size"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"
                    android:gravity="left|center_vertical"
                    android:layout_gravity="left|center_vertical"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="17"
                    android:layout_marginLeft="3dp"
                    android:layout_marginBottom="1dp"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:layout_gravity="left|center_horizontal"

                    >

                    <ImageView
                        android:id="@+id/img_rate_1"
                        android:layout_width="@dimen/star_height_width"
                        android:layout_height="@dimen/star_height_width"
                        android:layout_marginRight="1dp"
                        android:src="@drawable/star_100"/>
                    <ImageView
                        android:id="@+id/img_rate_2"
                        android:layout_width="@dimen/star_height_width"
                        android:layout_height="@dimen/star_height_width"
                        android:layout_marginRight="1dp"
                        android:src="@drawable/star_50"/>
                    <ImageView
                        android:id="@+id/img_rate_3"
                        android:layout_width="@dimen/star_height_width"
                        android:layout_height="@dimen/star_height_width"
                        android:layout_marginRight="1dp"
                        android:src="@drawable/star_0"/>
                    <ImageView
                        android:id="@+id/img_rate_4"
                        android:layout_width="@dimen/star_height_width"
                        android:layout_height="@dimen/star_height_width"
                        android:layout_marginRight="1dp"
                        android:src="@drawable/star_0"/>
                    <ImageView
                        android:id="@+id/img_rate_5"
                        android:layout_width="@dimen/star_height_width"
                        android:layout_height="@dimen/star_height_width"
                        android:layout_marginRight="1dp"
                        android:src="@drawable/star_0"/>
                   <!-- <RatingBar
                        android:id="@+id/rating_your_rating"
                        style="@style/customRatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="19dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:numStars="5"
                        android:stepSize="1"
                        android:rating="3"
                        android:clickable="false"/>
                    />-->

                    <TextView
                        android:id="@+id/txt_count_revirw"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" ( 215 )"
                        android:textColor="#FF1349"
                        android:layout_marginLeft="5dp"
                        android:textSize="@dimen/small_text_size"
                        android:layout_gravity="center_vertical"/>
                    <TextView
                        android:id="@+id/txt_revirw"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Reviews"
                        android:textColor="#FF1349"
                        android:layout_marginLeft="5dp"
                        android:textSize="@dimen/small_text_size"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/txt_availability"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="18"
                    android:text="Available"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="2dp"
                    android:textSize="@dimen/small_text_size"
                    android:layout_gravity="left|center_horizontal"
                    android:textColor="@color/app_theme_green"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="18"
                    android:layout_gravity="left|center_horizontal"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/padding_small"
                    android:layout_marginBottom="2dp"
                    android:visibility="visible">
                    <TextView
                        android:id="@+id/txt_real_price_currency"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="R"
                        android:textStyle="bold"

                        android:layout_gravity="center_horizontal"
                        android:textColor="#E01818"
                        android:textSize="@dimen/small_text_size"/>
                    <TextView
                        android:id="@+id/txt_real_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="680.95"
                        android:textStyle="bold"
                        android:layout_marginRight="@dimen/margin_10"
                        android:layout_gravity="center_horizontal"
                        android:textColor="#E01818"
                        android:textSize="@dimen/small_text_size"/>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/txt_old_price_currency"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/small_text_size"
                            android:text="R"
                            android:textColor="#686868"/>
                        <TextView
                            android:id="@+id/txt_old_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/txt_old_price_currency"
                            android:textSize="@dimen/small_text_size"
                            android:text="880.95"
                            android:textColor="#686868"/>
                        <LinearLayout
                            android:id="@+id/lin_cross"
                            android:layout_width="@dimen/cross_line_old_price_in_shopping_wishlist_width"
                            android:layout_height="2dp"
                            android:background="@color/grey"
                            android:orientation="vertical"
                            android:layout_centerVertical="true"></LinearLayout>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="35"
                    android:weightSum="100"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="4dp">

                    <Button
                        android:id="@+id/btn_add_to_cart"
                        android:layout_width="0dp"
                        android:layout_weight="50"
                        android:layout_height="match_parent"
                        android:background="@color/app_theme_blue"
                        android:text="ADD TO CART"
                        android:textColor="@color/white"
                        android:padding="@dimen/padding_small"
                        android:textSize="@dimen/small_text_size"
                        />

                    <Button
                        android:id="@+id/btn_remove"
                        android:layout_width="0dp"
                        android:layout_weight="50"
                        android:layout_height="match_parent"
                        android:background="@color/btn_bg_wishlst_delete"
                        android:text="DELETE"
                        android:textColor="@color/white"
                        android:padding="@dimen/padding_small"
                        android:textSize="@dimen/small_text_size"
                        android:layout_marginLeft="10dp"/>
                    <!--<LinearLayout
                        android:id="@+id/lin_remove"
                        android:layout_width="0dp"
                        android:layout_weight="40"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginLeft="@dimen/padding_large">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="DELETE"
                            android:gravity="center|center_vertical"
                            android:layout_margin="2dp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/small_text_size"
                            android:background="@color/app_theme_blue"/>

                    </LinearLayout>-->
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>
</RelativeLayout>
