<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="webskitters.com.stockup.PinCodeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="5">


       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_weight="2">

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent">

               <ImageView
                   android:id="@+id/img_background"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:background="#000"/>


               <TextView
                   android:id="@+id/tv_one"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="THE ON-DEMAND DAY-TO-DAY DELEVARY APP"
                   android:textColor="#fff"
                   android:textSize="36dp"
                   android:gravity="center"
                   android:textStyle="bold"/>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:gravity="center"
                   android:id="@+id/ll_one"
                   android:layout_below="@+id/tv_one"
                   android:layout_marginTop="10dp">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="ANYTHING DELIVERD ToO YOUR DOOR IN UNDER AN HOUR"
                       android:textSize="20dp"
                       android:textColor="#fff"
                       android:gravity="center"
                       android:textStyle="bold"
                       android:padding="8dp"/>

               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:gravity="center"
                   android:id="@+id/ll_two"
                   android:layout_below="@+id/ll_one"
                   android:layout_marginTop="10dp"
                   android:orientation="horizontal"
                   android:layout_marginRight="20dp"
                   android:layout_marginLeft="20dp"
                   android:background="@color/white">

                   <EditText
                       android:id="@+id/et_pin"
                       android:layout_width="match_parent"
                       android:layout_height="40dp"
                       android:hint="Type your post code"
                       android:textSize="20dp"
                       android:padding="3dp"
                       android:textColor="#fff"
                       android:textColorHint="#000"
                       android:gravity="left|center"
                       android:layout_gravity="center"
                       android:layout_weight="5"
                       android:background="#fff"/>

                   <ImageView
                       android:layout_width="30dp"
                       android:layout_height="30dp"
                       android:src="@drawable/landinglogo"
                       android:layout_weight="1"/>

               </LinearLayout>


               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:gravity="center"
                   android:id="@+id/ll_three"
                   android:layout_below="@+id/ll_two"
                   android:layout_marginTop="10dp"
                   android:orientation="horizontal"
                   android:layout_marginRight="20dp"
                   android:layout_marginLeft="20dp"
                   android:background="@color/white">

                   <Button
                       android:id="@+id/btn_proceed"
                       android:layout_width="match_parent"
                       android:layout_height="40dp"
                       android:text="FIND STORE NEAR YOU"
                       android:textSize="20dp"
                       android:textColor="#000"
                       android:textColorHint="#000"
                       android:gravity="center"
                       android:layout_gravity="center"
                       android:background="#fff"
                       android:textAllCaps="false"/>



               </LinearLayout>
           </RelativeLayout>
       </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@color/grey"
                android:layout_weight="4"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/red"
                android:layout_weight="1"
                android:text="Coverage"
                android:textAllCaps="false"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
