<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white_bg">
    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/menu_option_height"
        android:background="@color/app_theme_yellow"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_back"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/back_btn"
            android:padding="8dp"
            android:elevation="4dp"
            android:shadowColor="#cecece"
            android:layout_gravity="center|center_vertical"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center|center_vertical"
            android:layout_marginLeft="5dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:elevation="4dp"
            android:shadowColor="#cecece"
            android:text="Enter Card Details"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_top">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/hearder_height"
                android:text="Payment Type"
                android:gravity="left|center_vertical"
                android:textColor="@color/black"
                android:padding="@dimen/padding_normal"
                android:textSize="@dimen/large_text_size"
                android:layout_marginTop="@dimen/padding_normal"
                android:layout_marginLeft="@dimen/padding_normal"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_normal"
                android:layout_marginLeft="@dimen/padding_normal"
                android:padding="5dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/ll_cod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_vertical">
                    <ImageView
                        android:id="@+id/img_cod"
                        android:layout_width="@dimen/padding_large"
                        android:layout_height="@dimen/padding_large"
                        android:src="@drawable/normal"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cash on delivery"
                        android:paddingLeft="@dimen/padding_normal"
                        android:textSize="@dimen/medium_text_size"
                        android:layout_gravity="center|center_vertical"
                        android:textColor="@color/black"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_card_payment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_large"
                    android:layout_gravity="center|center_vertical"
                    android:tag="0">
                    <ImageView
                        android:id="@+id/img_card_payment"
                        android:layout_width="@dimen/padding_large"
                        android:layout_height="@dimen/padding_large"
                        android:layout_marginLeft="@dimen/padding_normal"
                        android:layout_gravity="center|center_vertical"
                        android:src="@drawable/active"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Card Payment"
                        android:paddingLeft="@dimen/padding_normal"
                        android:textSize="@dimen/medium_text_size"
                        android:layout_gravity="center|center_vertical"
                        android:textColor="@color/black"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_large"
                android:layout_marginLeft="@dimen/padding_normal"
                android:background="@drawable/edittext_background_bottom">
                <EditText
                    android:id="@+id/et_card_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Card Number"
                    android:singleLine="true"
                    android:inputType="numberSigned"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:background="@color/transparent"
                    android:padding="@dimen/padding_normal"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/hearder_height"
                android:text="Expiry"
                android:gravity=""
                android:textColor="@color/black"
                android:textSize="@dimen/large_text_size"
                android:padding="@dimen/padding_normal"
                android:layout_marginTop="@dimen/padding_normal"
                android:layout_marginLeft="@dimen/padding_normal"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/hearder_height"
                android:layout_gravity="right|center_vertical">

                <LinearLayout
                    android:id="@+id/lin_mm"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/padding_normal"
                    android:background="@drawable/edittext_background_bottom"
                    android:tag="0">
                <TextView
                    android:id="@+id/txt_mm"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="MM"
                    android:textColor="@color/black"
                    android:gravity="center|center_vertical"
                    android:layout_marginLeft="@dimen/padding_normal"
                    android:textSize="@dimen/medium_text_size"
                    />

                <ImageView
                    android:layout_width="@dimen/padding_normal"
                    android:layout_height="match_parent"
                    android:layout_gravity="center|center_vertical"
                    android:src="@drawable/down_arrow"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="@dimen/padding_normal"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lin_yyyy"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/padding_normal"
                    android:background="@drawable/edittext_background_bottom">
                <TextView
                    android:id="@+id/txt_yyyy"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="YYYY"
                    android:textColor="@color/black"
                    android:textSize="@dimen/medium_text_size"
                    android:gravity="center|center_vertical"
                    android:layout_marginLeft="@dimen/padding_normal"
                    />
                    <ImageView
                        android:layout_width="@dimen/padding_normal"
                        android:layout_height="match_parent"
                        android:layout_gravity="center|center_vertical"
                        android:src="@drawable/down_arrow"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="@dimen/padding_normal"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="@dimen/checkout_invisible_view_width"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/padding_normal"
                    android:visibility="invisible"
                    android:background="@drawable/edittext_background_bottom">

                <EditText

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="CVV"
                    android:padding="@dimen/padding_normal"
                    android:background="@null"
                    android:gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/padding_normal"
                    android:background="@drawable/edittext_background_bottom">
                    <EditText
                        android:id="@+id/ext_cvv"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:hint="CVV"
                        android:inputType="numberSigned"
                        android:gravity="center|center_vertical"
                        android:background="@null"
                        android:maxLength="3"
                        android:textColorHint="@color/black"
                        android:ellipsize="end"
                        android:textSize="@dimen/medium_text_size"
                        android:layout_marginLeft="@dimen/padding_normal"
                        />
                    <ImageView
                        android:layout_width="@dimen/padding_normal"
                        android:layout_height="match_parent"
                        android:layout_gravity="center|center_vertical"
                        android:src="@drawable/down_arrow"
                        android:visibility="invisible"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_pay"
                android:layout_width="match_parent"
                android:clickable="true"
                android:layout_height="@dimen/spc_tag_height"
                android:layout_marginLeft="@dimen/spc_tag_height"
                android:layout_marginTop="@dimen/padding_extra_large"
                android:layout_marginRight="@dimen/spc_tag_height"
                android:layout_marginBottom="@dimen/padding_normal"
                android:background="@drawable/btn_bg_payment_round">
                <TextView
                    android:id="@+id/txt_pay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="@dimen/signin_medium_text_size"
                    android:text="PAY R698.00"
                    android:textColor="@color/white"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_normal"
                android:layout_marginTop="@dimen/padding_normal"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/chkoutlock_icon"
                    android:layout_marginRight="5dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="This card will be securely saved for a faster payment experience,CVV number will not saved."/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/menu_option_height"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price Details"
                android:textColor="@color/black"
                android:textSize="@dimen/large_text_size"
                android:layout_margin="@dimen/padding_normal"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/spc_tag_width"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_normal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price(1Item)"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="R600.00"
                    android:textColor="@color/black"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_normal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delivery"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="R98.00"
                    android:textColor="@color/black"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="@dimen/padding_small"
                android:background="@color/black"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_normal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Amount Payble"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="R698.00"
                    android:textColor="@color/black"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="@dimen/padding_small"
                android:background="@color/black"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
