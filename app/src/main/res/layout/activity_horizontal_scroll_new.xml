<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#cecece"
            android:weightSum="51"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_header"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8"


                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/header_color">
                    <include
                        android:id="@+id/toolbar"
                        layout="@layout/toolbar_custom_top"
                        android:background="@color/header_color"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:background="@color/app_theme_blue">
                    <android.support.v4.view.ViewPager
                        android:id="@+id/vPagerSubCat"
                        android:layout_width="match_parent"
                        android:layout_weight="100"
                        android:layout_height="wrap_content"

                        android:layout_gravity="center|center_vertical"
                        android:background="@color/app_theme_blue"
                        />
                        <TextView
                            android:id="@+id/txt_no_subitem"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center|center_vertical"
                            android:textColor="@color/white"
                            android:textStyle="normal"
                            android:textSize="@dimen/large_text_size"
                            android:text="RECENT FAVOURITES"
                            android:visibility="gone"/>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <!--<ScrollView
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="39"
                android:id="@+id/scrollView"
                android:fillViewport="true"
                android:fadingEdge="none"
                >-->
                <ScrollView
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="39"
                    android:id="@+id/scrollView"
                    android:fillViewport="true"

                    android:fadingEdge="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_gravity="top"
                        android:weightSum="100">
                        <LinearLayout
                            android:id="@+id/lin_vPager"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="16"
                            android:orientation="horizontal">
                            <LinearLayout

                                android:layout_width="match_parent"
                                android:layout_height="@dimen/feature_product_width"
                                android:weightSum="18"
                                android:layout_below="@+id/rl_header"
                                android:background="#70B720"
                                android:alpha="195"
                                android:orientation="vertical"
                                app:layout_collapseMode="parallax">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="3"
                                    android:text="Featured Products"
                                    android:gravity="center|center_vertical"
                                    android:textStyle="bold"
                                    android:visibility="gone"
                                    android:textColor="@color/white"/>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginBottom="5dp"
                                    android:layout_marginTop="5dp"
                                    android:orientation="horizontal"
                                    android:weightSum="100">
                                    <ImageView
                                        android:id="@+id/img_prev"
                                        android:layout_width="0dp"
                                        android:layout_weight="10"
                                        android:layout_marginLeft="5dp"
                                        android:layout_marginRight="5dp"
                                        android:padding="5dp"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center|center_vertical"
                                        android:src="@drawable/back_btn"
                                        android:visibility="gone"/>
                                    <android.support.v4.view.ViewPager
                                        android:id="@+id/vPager"
                                        android:layout_width="0dp"
                                        android:layout_weight="100"
                                        android:layout_marginLeft="7dp"
                                        android:layout_marginRight="7dp"
                                        android:layout_height="wrap_content"
                                        android:background="#cecece"
                                        >

                                    </android.support.v4.view.ViewPager>
                                    <ImageView
                                        android:id="@+id/img_next"
                                        android:layout_width="0dp"
                                        android:layout_weight="10"
                                        android:layout_height="match_parent"
                                        android:layout_marginRight="5dp"
                                        android:layout_marginLeft="5dp"
                                        android:padding="5dp"
                                        android:visibility="gone"
                                        android:layout_gravity="center|center_vertical"
                                        android:src="@drawable/arrow_right"/>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                       <!-- <com.handmark.pulltorefresh.library.PullToRefreshGridView
                            xmlns:ptr="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/gridview"
                            android:layout_height="fill_parent"
                            android:layout_width="match_parent"
                            android:columnWidth="90dp"
                            android:numColumns="2"
                            android:verticalSpacing="10dp"
                            android:horizontalSpacing="10dp"
                            android:stretchMode="columnWidth"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="10dp"
                            android:gravity="top"
                            ptr:ptrMode="pullFromEnd"
                            ptr:ptrDrawable="@null"
                            android:smoothScrollbar="true"
                            android:overScrollMode="never"
                            android:background="#cecece"
                            android:layout_below="@+id/lin_vPager"/>-->

                         <webskitters.com.stockup.ExpandableHeightGridView
                             android:id="@+id/gridview"
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:columnWidth="90dp"
                             android:numColumns="2"
                             android:verticalSpacing="10dp"
                             android:horizontalSpacing="10dp"
                             android:stretchMode="columnWidth"
                             android:layout_gravity="center_horizontal"
                             android:layout_margin="10dp"
                             android:gravity="top"
                             android:smoothScrollbar="true"
                             android:overScrollMode="never"
                             android:background="#cecece"
                             android:layout_below="@+id/lin_vPager"
                             android:scrollbars="none"
                             android:visibility="visible"

                             />

                         <TextView
                             android:id="@+id/txt_empty_product_list"
                             android:layout_width="match_parent"
                             android:layout_height="match_parent"
                             android:gravity="center|center_vertical"
                             android:textColor="@color/black"
                             android:layout_margin="@dimen/margin_10"
                             android:textSize="@dimen/large_text_size"
                             android:visibility="gone"
                             android:text=""
                             />
                     </LinearLayout>
                 </LinearLayout>
                </ScrollView>
             <!--</ScrollView>-->
            <!-- </RelativeLayout>-->
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45sp"
            android:layout_alignParentBottom="true"
            android:background="@color/app_theme_blue"
            >
            <ImageView
                android:id="@+id/img_search_icon_auto"
                android:layout_width="0dp"
                android:layout_weight="20"
                android:layout_height="match_parent"
                android:src="@drawable/search_new_icon"
                android:padding="@dimen/margin_12"
                android:clickable="true"
                android:layout_gravity="center|center_vertical"
                />

            <LinearLayout
                android:id="@+id/lin_categories"
                android:layout_width="0dp"
                android:layout_weight="50"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:visibility="visible"
                android:weightSum="100">

                <TextView
                    android:id="@+id/txt_categories"
                    android:layout_width="match_parent"
                    android:layout_weight="50"
                    android:layout_height="match_parent"
                    android:gravity="center|center_vertical"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/white"
                    android:text="Categories"/>


            </LinearLayout>
            <LinearLayout
                android:id="@+id/lin_total_price"
                android:layout_width="0dp"
                android:layout_weight="30"
                android:layout_height="match_parent"
                android:visibility="visible"
                android:weightSum="99">
                <TextView
                    android:id="@+id/txt_total_price"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="R0.00"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    </android.support.v4.widget.DrawerLayout>