                    android:scrollbars="none"
                    android:layout_below="@+id/tv_shopping_list_count"
                    android:layout_above="@+id/lin_bottom_bar"/>
           <!--<webskitters.com.stockup.ExpandableHeightListView
                android:id="@+id/lv_shoping_list"
