<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toolbarCustomTop"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/hearder_height"
    android:background="@color/app_theme_green"
    android:elevation="4dp"
    >
    <LinearLayout
        android:id="@+id/lin_header"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/hearder_height"
        android:layout_alignParentTop="true"
        android:gravity="left|center_vertical"
        android:weightSum="100"
        android:background="@color/app_theme_green"
        >

        <RelativeLayout
            android:id="@+id/lin_back"
            android:layout_width="match_parent"
            android:layout_weight="48"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img_back"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:src="@drawable/back_btn"
                android:padding="@dimen/padding_normal"
                android:elevation="4dp"
                android:shadowColor="#cecece"
                android:layout_gravity="center|center_vertical"/>

            <TextView
                android:id="@+id/tv_signin"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center|center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/img_back"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:elevation="4dp"
                android:shadowColor="#cecece"
                android:text="My Cart"/>
            <TextView
                android:id="@+id/txt_clear_cart"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Empty Cart"
                android:textSize="16sp"
                android:gravity="center|center_vertical"
                android:textColor="@color/white"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_10"
                />
        </RelativeLayout>


        </LinearLayout>


</android.support.v7.widget.Toolbar>