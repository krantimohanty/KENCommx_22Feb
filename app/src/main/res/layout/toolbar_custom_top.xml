<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toolbarCustomTop"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/hearder_height"
    android:background="@color/header_color"
    android:elevation="4dp"
    >
    <LinearLayout
        android:id="@+id/lin_header"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/hearder_height"
        android:layout_alignParentTop="true"
        android:gravity="left|center_vertical"
        android:weightSum="100"
        android:background="#FBAE2E"
        >

        <LinearLayout
            android:id="@+id/lin_back"
            android:layout_width="0dp"
            android:layout_weight="48"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img_back"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:src="@drawable/back_btn"
                android:padding="@dimen/padding_normal"
                android:elevation="4dp"
                android:shadowColor="#cecece"
                android:layout_gravity="center|center_vertical"/>

            <TextView
                android:id="@+id/tv_signin"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center|center_vertical"
                android:layout_marginLeft="5dp"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:elevation="4dp"
                android:shadowColor="#cecece"
                android:text="Sign In"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="52"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:layout_marginRight="5dp"
            android:gravity="right|center_vertical"
            android:layout_gravity="right|center_vertical"
            android:weightSum="99">
            <ImageView
                android:id="@+id/img_landing_icon"
                android:layout_width="0dp"
                android:layout_weight="20"
                android:layout_height="26dp"
                android:src="@drawable/grid_icon"
                android:elevation="4dp"
                android:shadowColor="#cecece"
                android:layout_gravity="center|center_vertical"
                android:visibility="visible"
                />

            <ImageView
                android:id="@+id/img_filter_icon"
                android:layout_width="0dp"
                android:layout_weight="20"
                android:layout_height="25dp"
                android:src="@drawable/filter_icon"
                android:elevation="4dp"
                android:visibility="gone"
                android:shadowColor="#cecece"
                android:layout_gravity="center|center_vertical"/>

            <ImageView
                android:id="@+id/img_wishlist_icon"
                android:layout_width="0dp"
                android:layout_weight="20"
                android:layout_height="25dp"
                android:elevation="4dp"
                android:shadowColor="#cecece"
                android:src="@drawable/wishlist_details_top"
                android:layout_gravity="center|center_vertical"/>
            <LinearLayout
                android:id="@+id/lin_cart"
                android:layout_width="0dp"
                android:layout_weight="40"
                android:weightSum="40"
                android:layout_height="match_parent"
                android:layout_gravity="right|center_vertical">
                <ImageView
                    android:id="@+id/img_cart_icon"
                    android:layout_width="0dp"
                    android:layout_weight="22"
                    android:layout_height="25dp"
                    android:src="@drawable/bottomcart_icon"
                    android:layout_marginLeft="5dp"
                    android:elevation="4dp"
                    android:shadowColor="#cecece"
                    android:layout_gravity="right|center_vertical"/>
                <Button
                    android:id="@+id/btn_count"
                    android:layout_width="0dp"
                    android:layout_weight="16"
                    android:layout_height="20dp"
                    android:gravity="center|center_vertical"
                    android:layout_gravity="center|center_vertical"
                    android:layout_marginLeft="2dp"
                    android:textColor="#048bcd"
                    android:background="@color/white"
                    android:visibility="visible"
                    android:elevation="4dp"
                    android:shadowColor="#cecece"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:text="0"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.Toolbar>