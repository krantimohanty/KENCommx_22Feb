<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#00ffffff"
    android:padding="15dp"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:layout_centerInParent="true"
    android:background="#fff"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="#007acd"
    android:id="@+id/rel1"
    android:layout_alignParentTop="true"
    android:visibility="gone"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:text="Notice"
        android:textStyle="bold"
        android:id="@+id/header"
        android:layout_centerInParent="true"
        android:textSize="15sp"
        />
</RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel1"
        android:id="@+id/msg"
        android:text="Please provide your date of birth to confirm you are at least 18 years of age and may view alcoholic content."
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/medium_text_size"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/hearder_height"
        android:layout_below="@+id/msg"
        android:background="@color/white"
        android:id="@+id/txt_date"
        android:hint="DD/MM/YYYY"
        android:textColorHighlight="#70B74E"
        android:textSize="@dimen/medium_text_size"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:textColor="#70B74E"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#ffffff"
        android:id="@+id/rel2"
        android:layout_alignParentBottom="true"
        android:padding="2dp"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="@color/grey_light"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:weightSum="2">

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:text="VERIFY"
                android:textStyle="normal"
                android:id="@+id/btn_yes"
                android:textColor="#048BCD"
                android:gravity="center|center_vertical"
                android:layout_margin="5dp"
                android:textSize="@dimen/medium_text_size"
                android:background="#00000000"
                />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/grey_light"/>
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:textColor="#048BCD"
                android:text="CANCEL"
                android:textStyle="normal"
                android:id="@+id/btn_no"

                android:layout_margin="5dp"
                android:textSize="@dimen/medium_text_size"
                android:background="#00000000"

                />

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
</RelativeLayout>