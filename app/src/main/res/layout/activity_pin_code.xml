<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:weightSum="26">
        <LinearLayout
            android:id="@+id/ll_top_img"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="15"
            android:orientation="vertical"
            android:background="@drawable/top_image_drink"
            android:weightSum="26">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                >
                <android.support.v7.widget.Toolbar
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:minHeight="@dimen/hearder_height"
                    android:elevation="4dp"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/background_yellow_transparent">
                        <Button
                            android:id="@+id/btn_nav"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:background="@drawable/icon_nav"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"/>
                        <TextView
                            android:id="@+id/txt_top_bar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Stockup Food Store"
                            android:textSize="18sp"
                            android:layout_centerInParent="true"
                            android:textColor="#fff"/>

                        <LinearLayout
                            android:id="@+id/lin_landing"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/img_landing_icon"
                                android:layout_width="wrap_content"
                                android:layout_weight="20"
                                android:layout_height="match_parent"
                                android:src="@drawable/grid_icon"
                                android:paddingTop="@dimen/padding_small"

                                android:shadowColor="#cecece"
                                android:layout_gravity="center|center_vertical"
                                android:visibility="visible"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Stores"
                                android:layout_marginRight="4dp"
                                android:textColor="@color/white"
                                android:gravity="center"
                                android:textSize="@dimen/small_text_size"/>
                        </LinearLayout>
                    </RelativeLayout>
                </android.support.v7.widget.Toolbar>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8"
                android:layout_gravity="center"
                android:visibility="invisible"
                android:gravity="center">

                <TextView
                    android:id="@+id/txt_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="THE ON-DEMAND \nDRINKS \nDELEVARY APP"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_gravity="center"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/background_blue_transparent"
                android:layout_weight="5"
                android:gravity="center"
                android:elevation="5dp">

                <TextView
                    android:id="@+id/txt_subheader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wine, beer, liquor delivered \nto your door in under one hour "
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="9"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:id="@+id/ll_two"
                    android:layout_below="@+id/ll_one"
                    android:orientation="horizontal"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:elevation="5dp"
                    android:background="@drawable/background_white">

                    <TextView
                        android:id="@+id/et_pin"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Set Delivery Location"
                        android:textSize="@dimen/medium_text_size"
                        android:paddingLeft="15dp"
                        android:textColor="#000000"
                        android:textColorHint="#000000"
                        android:gravity="center|center_vertical"
                        android:layout_gravity="center"
                        android:singleLine="true"
                        android:layout_weight="5"
                        android:editable="false"
                        android:inputType="textNoSuggestions|textVisiblePassword"
                        android:background="#00000000"/>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/icon_map"
                        android:padding="5sp"
                        android:layout_weight="1"/>
                </LinearLayout>
                <Button
                    android:id="@+id/btn_proceed"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:text="SEARCH"
                    android:elevation="5dp"
                    android:textSize="16sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="@color/app_theme_green"
                    android:textAllCaps="false"/>

            </LinearLayout>
        </LinearLayout>
        <!--<LinearLayout
            android:id="@+id/ll_bottom_img"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:orientation="vertical"
            android:background="@color/transparent">
-->
            <ImageView
                android:id="@+id/img_bottom_img"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="9"
                android:scaleType="centerCrop"
                android:src="@drawable/bottom_image_drink"/>
        <!--</LinearLayout>-->
        <RelativeLayout
            android:id="@+id/ll_coverage"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@color/app_theme_blue">
            <TextView
                android:id="@+id/txt_coverage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="COVERAGE"
                android:layout_centerInParent="true"
                android:gravity="center|center_vertical"
                android:textStyle="bold"
                android:textColor="@color/white"/>
            <ImageView
                android:layout_width="15sp"
                android:layout_height="15sp"
                android:layout_toRightOf="@+id/txt_coverage"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/arrow_right"/>
        </RelativeLayout>
    </LinearLayout>
    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        >
        <include layout="@layout/menu_options" />
    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
