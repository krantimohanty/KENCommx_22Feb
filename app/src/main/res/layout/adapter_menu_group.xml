<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:globalmlledating="http://schemas.android.com/tools"
    android:id="@+id/rel_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu_item_selector">

    <ImageView
        android:id="@+id/img_menu"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/champagne"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:paddingBottom="10sp"
        android:paddingLeft="20sp"
        android:paddingRight="10sp"
        android:paddingTop="10sp"/>

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingBottom="10sp"
        android:paddingLeft="70sp"
        android:paddingRight="10sp"
        android:paddingTop="10sp"
        android:text="adksfjdsfdf"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txt_push_count"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="25"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingRight="10sp"

        android:background="@drawable/noti_red_round"
        android:paddingLeft="10sp"
        android:gravity="center|center_vertical"
        android:textColor="@color/white"
        android:textSize="@dimen/medium_text_size"
        android:visibility="gone"
        android:layout_marginRight="10dp"/>
    <TextView
        android:id="@+id/txt_indicator"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center|center_vertical"
        android:background="@drawable/plus_icon"
        android:textColor="@color/white"
        android:textSize="@dimen/medium_text_size"
        android:visibility="gone"
        android:layout_marginRight="10dp"/>
<!--<View
    android:layout_width="match_parent"
    android:layout_height="1sp"
    android:background="#cecece"
    android:layout_below="@+id/"/>-->

</RelativeLayout>