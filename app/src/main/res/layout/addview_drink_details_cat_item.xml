<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="160dp"
    android:background="@color/white"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center">
            <ImageView
                android:id="@+id/img_cat"
                android:layout_width="match_parent"
                android:layout_height="108dp"
                android:layout_marginTop="22dp"
                android:paddingLeft="@dimen/padding_extream_large"
                android:paddingRight="@dimen/padding_extream_large"
                android:src="@drawable/productimage"/>
            <ProgressBar
                android:id="@+id/progress_grid"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="@dimen/padding_large"
                android:padding="@dimen/padding_large"/>
        </RelativeLayout>
        <ImageView
            android:id="@+id/img_special"
            android:layout_width="@dimen/spc_tag_width"
            android:layout_height="@dimen/spc_tag_height"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="3dp"
            android:layout_alignParentTop="true"
            android:src="@drawable/spcl_tag"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="100">
            <TextView
                android:id="@+id/tv_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="3dp"
                android:text="R399.54"
                android:gravity="right"
                android:textSize="12dp"
                android:textColor="#048bcd"

                />
            <TextView
                android:id="@+id/tv_cat_qnt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="750 ML"
                android:gravity="right"
                android:textColor="@color/black"

                android:textSize="10dp"
                android:layout_below="@+id/tv_price"
                />
            <ImageView
                android:id="@+id/img_plus"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/plus_icon_cat_details"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="15dp"
                android:layout_gravity="right"
                android:layout_below="@+id/tv_cat_qnt"
                />

            <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
                android:layout_above="@+id/tv_cat_details">
            <ImageView
                android:id="@+id/img_on_demand"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:visibility="invisible"
                android:src="@drawable/subcategory_ondmnd_icon"/>

                <ImageView
                    android:id="@+id/img_wish"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="5dp"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="end"
                    android:src="@drawable/wish_icon_cat_details"
                    android:layout_marginBottom="1dp"
                    />
            </RelativeLayout>
            <TextView
                android:id="@+id/tv_cat_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Cruz Vintage Black"
                android:gravity="left|bottom"
                android:textColor="@color/black"
                android:layout_marginTop="25dp"
                android:textSize="@dimen/small_text_size"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:layout_above="@+id/tv_cat_details"

                />
            <TextView
                android:id="@+id/tv_cat_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bordauex 2014"
                android:gravity="left"
                android:layout_marginLeft="5dp"
                android:textColor="#aaaaaa"
                android:textSize="12sp"
                android:layout_below="@+id/tv_cat_name"
                android:visibility="gone"

                />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>